<view class="swiper-tab">  
    <view class="swiper-tab-list {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">演示</view>  
    <view class="swiper-tab-list {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">实现</view> 
</view>  

<view style='margin-top: 4rpx'>
<swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{winHeight - 43}}px" bindchange="bindChange"> 
    <swiper-item>
      <view class='content' style="height:{{winHeight - 93}}px">

        <view class='textarea'>
          <textarea placeholder='请输入需要转换的文字（最多50字）' bindblur='bindTextAreaBlur'></textarea>
          <image src='/images/icons/search_32.png' mode='center' class='image_search' bindtap='submit'></image>
        </view>

        <view class='setting'>
          <view class='source'>
            <picker range='{{translation_array}}' bindchange='sourceIndexChange'>{{translation_array[source_index]}}</picker>
          </view>
          <image src='/images/icons/transfer_16.png' mode='center' class='image_transfer'></image>
          <view class='destination'>
            <picker range='{{translation_array}}' bindchange='destinationIndexChange'>{{translation_array[destination_index]}}</picker>
          </view>
        </view>
        <block wx:if="{{search_history_display}}">
          <view wx:for='{{search_history}}' wx:key='search_historyList'>
            <view class='history' bindtap='history_submit' data-content='{{item.content}}' data-from='{{item.source}}' data-to='{{item.destination}}'>{{item.content}}</view>
          </view>
          <view class='clear_history' bindtap='clearHistory'>清除历史</view>
        </block>

        <view wx:if="{{info_display}}">
          <view class='result' bindlongpress='longPress'>{{info.translation}}</view>
        </view>   
      </view>
      <view class='footer' bindtap='submit'>
          <button class='button_clear'> 翻译 </button>
      </view>
    </swiper-item>
    <swiper-item>
      <scroll-view scroll-y style='height:{{winHeight-93}}px'>
        <view class='content' style="height:{{winHeight - 93}}px">
          <view class='result' wx:if='{{info_display}}'>有道翻译</view>
        </view>
      </scroll-view>
      <view class='footer'>
        <button open-type='share' style='height:100%; width:100%'> 分享 </button>
      </view>
    </swiper-item>
</swiper>
</view>