.swiper-tab{  
    width: 100%;  
    border-bottom: 2rpx solid #777777;  
    text-align: center;
    height: 80rpx;
    line-height: 80rpx;
  } 
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 33.33%;  
    color: #777777;  
}  
.on{ 
    color: #da7c0c;  
    border-bottom: 4rpx solid #da7c0c;
    }
  
.swiper-box{ 
    display: block; 
    height: 100%; 
    width: 100%; 
    overflow: hidden;
    text-align: center; 
  }

.content{
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.history{
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 33rpx;
  width: 600rpx;
  height: 50rpx;
  line-height: 50rpx;
  margin-top: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid rgb(140,140,140);
}

.clear_history{
  width: 200rpx;
  height: 60rpx;
  line-height: 60rpx;
  margin-top: 30rpx;
  border: 1rpx solid rgb(140,140,140);
  border-radius: 50rpx;
  font-size: 33rpx; 
}

textarea {
  width: 600rpx;
  height: 50rpx;
  line-height: 50rpx;
}

.textarea{
  width: 666rpx;
  height: 50rpx;
  line-height: 50rpx;
  border: 2rpx solid #000;
  border-radius: 50rpx;
  margin-top: 40rpx;
  padding: 20rpx;
  text-align: left;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.setting{
  width: 250rpx;
  margin-top: 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.image_transfer{
  width: 16px;
  height: 16px;
}

.image_search{
  width: 32px;
  height: 32px;
}

.result {
  width: 700rpx;
  margin-top: 20rpx;
  padding: 10rpx;
  font-size: 14px;
  border-radius: 5px;
  border-bottom: 1px solid #DDD;
  word-wrap: break-word;
}

.footer{
  height: 100rpx;
  line-height: 100rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  border-top: 2rpx solid #da7c0c;
}

.button_clear{
  height: 100rpx;
  width: 100%;
  border: 0;
  border-radius: 0;
}